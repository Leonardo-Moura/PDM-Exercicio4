<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp">


    <TextView
            android:text="999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtCodigo"
            android:textSize="30sp" android:textStyle="bold" android:textColor="@android:color/black"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginStart="20dp" android:paddingBottom="5dp">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtDescricao"
                android:textColor="@android:color/black"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Qtd.:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/lblQtde"/>
            <TextView
                    android:text="999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtQtde" android:layout_marginStart="5dp"/>
            <TextView
                    android:text="@string/StrPreco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/lblPreco" android:layout_marginStart="30dp"/>
            <TextView
                    android:text="999.99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtPreco" android:layout_marginStart="5dp"/>
        </LinearLayout>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>